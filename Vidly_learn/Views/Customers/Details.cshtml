@model Vidly_learn.Models.Customer
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Membership: @Model.MembershipType.Name</li>
    @if (Model.Birth.HasValue)
    {
        <li>@Model.Birth.Value.ToShortDateString()</li>
    }
</ul>