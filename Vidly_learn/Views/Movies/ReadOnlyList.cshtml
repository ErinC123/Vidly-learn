@model IEnumerable<Vidly_learn.Models.Movie>
@{
    
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>


@if (!Model.Any())
{
    <text>There is not any movies yet</text>
}
else
{
    <table id="movies" class="table table-bordered table-hover">
        <thead>
            <tr>
                <td>Movies</td>
                <td>Genre</td>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
    
}

@section scripts
{
    <script>
        $(document).ready(function() {
            $("#movies").DataTable({
                ajax: {
                    url: "api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name"
                    },
                    {
                        data: "genre.name"
                    }
                   
                ]
            });
        });

    </script>
}