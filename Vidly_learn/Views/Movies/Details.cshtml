@model Vidly_learn.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Release Date: @Model.ReleaseDate.DayOfWeek, @Model.ReleaseDate.ToLongDateString()</li>
    <li>Date of Added: @Model.AddedDate.DayOfWeek, @Model.AddedDate.ToLongDateString()</li>
    <li>Number in Stock: @Model.NumInStock</li>
</ul>
